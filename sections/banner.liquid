{{ 'banner.css' | asset_url | stylesheet_tag }}

{% style %}
  .text-align-{{ section.id }} {
    text-align:{{  section.settings.text_alignment_mobile }};
  }

  @media only screen and (min-width:768px) {
    .text-align-{{ section.id }} {
      text-align:{{  section.settings.text_alignment_desktop }};
    }
  }
{% endstyle %}
<div>
  {% for block in section.blocks %}
    <div class="head-section">
      <div class="header-content">
        <div class="medium-hide">{% render 'hamburger' %}</div>
        <div class="image">
          {% render 'image', mobileImage: block.settings.logo, desktopImage: block.settings.logo %}
        </div>
        <div class="content mobile-hide">{{ block.settings.heading }}</div>
        <a class="banner-button mobile-hide" href="{{ block.settings.button_url }}">
          <span class="label">{{ block.settings.button_label }}</span>
          <span class="right-arrow">{% render 'right-arrow' %}</span>
        </a>
      </div>
    </div>
  {% endfor %}
  <div clas class="text-align-{{ section.id }}">
    <div class="banner-text medium-hide">
      <h2 class="heading">{{ section.settings.Heading }}</h2>
      <div class="description">{{ section.settings.caption }}</div>
    </div>
    <div class="banner-image-context position-{{  section.id }}">
      <div class="banner-image">
        {% render 'image', mobileImage: section.settings.image, desktopImage: section.settings.desktop_image %}
      </div>
      <div class="banner-context-wrapper {{ section.settings.box_align_mobile }} {{ section.settings.box_align }}">
        <div class="banner-context ">
          <div class="banner-text mobile-hide">
            <h2 class="heading">{{ section.settings.Heading }}</h2>
            <div class="description">{{ section.settings.description }}</div>
          </div>
          <a class="banner-button" href="{{ section.settings.button_url }}">
            <span class="label">{{ section.settings.button_label }}</span>
            <span class="right-arrow">{% render 'right-arrow' %}</span>
          </a>
        </div>
      </div>
    </div>
    <div class="banner-bottom">
      <p>{{ section.settings.banner_bottom }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Banner",
  "tag": "section",
  "class": "banner",
  "settings": [
    {
      "type": "header",
      "content": "Banner Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Mobile Image"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "text",
      "id": "Heading",
      "label": "heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "description",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>",
      "info": "desktop only"
    },
    {
      "type": "richtext",
      "id": "caption",
      "label": "caption",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination.</p>",
      "info": "mobile only"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Url"
    },
    {
      "type": "text",
      "label": "button label",
      "id": "button_label",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "banner_bottom",
      "label": "Bottom Text",
      "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
    },
    {
      "type": "select",
      "id": "text_alignment_mobile",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "center",
      "label": "Mobile content alignment"
    },
    {
      "type": "select",
      "id": "text_alignment_desktop",
      "options": [
        {
          "value": "left",
          "label": "left"
        },
        {
          "value": "center",
          "label": "center"
        },
        {
          "value": "right",
          "label": "right"
        }
      ],
      "default": "center",
      "label": "Desktop content alignment"
    },
    {
      "type": "select",
      "id": "box_align",
      "options": [
        {
          "value": "top-left",
          "label": "Top Left"
        },
        {
          "value": "top-center",
          "label": "Top Center"
        },
        {
          "value": "top-right",
          "label": "Top Right"
        },
        {
          "value": "middle-left",
          "label": "Middle Left"
        },
        {
          "value": "middle-center",
          "label": "Middle Center"
        },
        {
          "value": "middle-right",
          "label": "Middle Right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom Left"
        },
        {
          "value": "bottom-center",
          "label": "Bottom center"
        },
        {
          "value": "bottom-right",
          "label": "Bottom Right"
        }
      ],
      "default": "middle-center",
      "label": "content position"
    }
  ],
  "blocks": [
    {
      "type": "header",
      "name": "header",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "heading",
          "default": "The Gift Guide"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Url"
        },
        {
          "type": "text",
          "label": "button label",
          "id": "button_label",
          "default": "Shop Now"
        },
        {
          "type": "image_picker",
          "id": "logo",
          "label": "logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "banner"
    }
  ]
}
{% endschema %}
